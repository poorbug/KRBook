swiper {
  width: 100%;
  height: 100%;
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/hero-title.png);
  background-repeat: no-repeat;
  background-size: 60%;
  background-position: center 4%;
}

swiper .wx-swiper-dot{
  width: 30rpx;
  height: 30rpx; 
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/hero-dot.png);
  background-size: 100% 100%;
  margin-bottom: 20rpx;
}

swiper .wx-swiper-dot-active {
  width: 40rpx;
  height: 40rpx; 
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/hero-dot-active.png);
}

.item-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.gif {
  width: 200rpx;
  height: 120rpx;
  position: absolute;
  left: 22%;
  top: 15%;
  background-size: contain;
  background-repeat: no-repeat;
}

.desc,
.frame,
.pic {
  width: 64%;
  height: 64%;
  position: absolute;
  top: 15%;
  left: 18%;
}

.frame {
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/hero-frame.png);
  background-size: 100% 100%;
}

.pic {
  background-repeat: no-repeat;
  background-size: 90% 95%;
  background-position: 30rpx 30rpx;
}

.desc {
  display: block;
  background-color: rgba(0, 0, 0, .5); 
  color: white;
  font-size: 24rpx;
  padding-top: 200rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
  text-align: center;
  opacity: 1;
  transition: opacity .4s ease-in-out;
  box-shadow: 0 0 100rpx 10rpx black;
}

.desc view:first-child {
  margin-bottom: 100rpx;
}

.attr image {
  width: 20rpx;
  height: 30rpx;
  margin: 0 5rpx;
}

.attr image:first-child {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.speaker {
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 3vh;
  bottom: 7vh;
}
