.msgboard {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  display: block;
  transition: transform .4s ease-in-out;
  background-color: #382713;
}

.msgboard-hidden {
  transform: translateY(-100vh);
}

.msgboard > .add-comment {
  position: fixed;
  left: 3vh;
  bottom: -93vh;
  z-index: 1;
  width: 60rpx;
  height: 60rpx;
}

.msg-container {
  height: 85%;
  position: absolute;
  bottom: 70rpx;         
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/msgbox.png);
  background-size: 100% 100%;
  box-sizing: border-box;
  padding: 76rpx 30rpx 30rpx 30rpx;
}

.msg-title {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/title-box-yellow.png);
  background-size: 100% 100%;
  display: block;
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translateX(-50%);
}

.link {
  width: 40rpx;
  height: 130rpx;
  position: absolute;
}

.link-l {
  left: 120rpx;
}

.link-r {
  right: 120rpx;
}

.msg {
  padding: 20rpx 0;  
  height: auto;
  overflow: scroll;
}
.msg-item {
  padding: 20rpx 36rpx;
}

.msg-item-left,
.msg-item-right {
  display: inline-block;
}

.msg-item-left {
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.msg-item-right {
  width: 538rpx;
  text-align: left;
}

.msg-item-left > image {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  display: block;
}

.msg-item-left > text {
  font-size: 24rpx;
  color: rgb(187, 187, 187);
}

.msg-item-right > view {
  position: relative;
  height: 48rpx;
}

.msg-item-right > view text {
  top: 0;
  position: absolute;
}

.msg-item-right > view text:first-child {
  font-size: 28rpx;
  left: 0;
}

.msg-item-right > view text:last-child {
  font-size: 22rpx;
  right: 0;
  color: rgb(187, 187, 187);
}

.msg-item-right > text {
  font-size: 28rpx;
  line-height: 0.8;
}

.comment {
  width: 100%;
  height: 80rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  background-image: url(http://omhr7p9e5.bkt.clouddn.com/microapp/krbook/black-talker-l.png);
  background-size: 100% 100%;
}

.comment input,
.comment image {
  display: inline-block;
  height: 50rpx;
  box-sizing: border-box;
}

.comment input {
  width: 640rpx;
  margin-right: 10rpx;
  text-align: left;
  border-radius: 10rpx;
  border: 1px solid #ddd;
  font-size: 24rpx;
  padding: 0 20rpx;
  overflow: hidden;
  color: white;
}

.comment image {
  width: 50rpx;
  font-size: 28rpx;
  padding: 0;
  line-height: 56rpx;
}
