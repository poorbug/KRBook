.msgboard {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  display: block;
  transition: transform .4s ease-in-out;
}

.msgboard-hidden {
  transform: translateY(-100vh);
}

.msgboard > button {
  position: fixed;
  left: 3vh;
  bottom: -97vh;
  z-index: 1;
}

.msgboard > image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 20%;
  margin-top: -60rpx;
}

.msg-container {
  height: 80%;
  position: absolute;
  bottom: 0;
}

.msg {
  padding: 20rpx 0;  
  background-color: rgb(243, 245, 249);
  height: auto;
  overflow: scroll;
  padding-bottom: 100rpx;
}
.msg-item {
  padding: 20rpx 36rpx;
}

.msg-item-left,
.msg-item-right {
  display: inline-block;
}

.msg-item-left {
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.msg-item-right {
  width: 598rpx;
  text-align: left;
}

.msg-item-left > image {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  display: block;
}

.msg-item-left > text {
  font-size: 24rpx;
  color: rgb(187, 187, 187);
}

.msg-item-right > view {
  position: relative;
  height: 48rpx;
}

.msg-item-right > view text {
  top: 0;
  position: absolute;
}

.msg-item-right > view text:first-child {
  font-size: 28rpx;
  left: 0;
}

.msg-item-right > view text:last-child {
  font-size: 22rpx;
  right: 0;
  color: rgb(187, 187, 187);
}

.msg-item-right > text {
  font-size: 28rpx;
  line-height: 0.8;
}

.comment {
  width: 100%;
  height: 80rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  background-color: white;
  position: absolute;
  bottom: 0;
}

.comment input,
.comment button {
  display: inline-block;
  height: 50rpx;
  box-sizing: border-box;
}

.comment input {
  width: 640rpx;
  margin-right: 10rpx;
  text-align: left;
  border-radius: 10rpx;
  border: 1px solid #ddd;
  font-size: 24rpx;
  padding: 0 20rpx;
  overflow: hidden;
}

.comment button {
  width: 50rpx;
  font-size: 28rpx;
  padding: 0;
  line-height: 56rpx;
}
